{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 26,
        "patch": 0
    },
    "configurePresets": [
        {
            "hidden": true,
            "name": "generate_compile_commands",
            "environment": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "hidden": true,
            "name": "base_configuration",
            "inherits": [
                "generate_compile_commands"
            ],
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "displayName": "Ninja Multi-Config",
            "name": "ninja-mc",
            "description": "Use Ninja to generate a multiconfiguration output.",
            "generator": "Ninja Multi-Config",
            "environment": {
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
            },
            "inherits": [
                "base_configuration"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "targets",
            "configurePreset": "ninja-mc",
            "hidden": true
        },
        {
            "name": "ninja-mc-release-all",
            "displayName": "Release",
            "configuration": "Release",
            "inherits": ["targets"]
        },
        {
            "name": "ninja-mc-debug-all",
            "displayName": "Debug",
            "configuration": "Debug",
            "inherits": ["targets"]
        }
    ],
    "testPresets": [
        {
            "name": "ninja-mc-debug-tests",
            "displayName": "Debug Tests",
            "configurePreset": "ninja-mc",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        },
        {
            "name": "ninja-mc-release-tests",
            "displayName": "Release Tests", 
            "configurePreset": "ninja-mc",
            "configuration": "Release",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        }
    ]
}
