{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 26,
        "patch": 0
    },
    "configurePresets": [
        {
            "hidden": true,
            "name": "base_configuration",
            "binaryDir": "build/${presetName}"
        },
        {
            "displayName": "Ninja Multi-Config",
            "name": "ninja-mc",
            "description": "Use Ninja to generate a multiconfiguration output.",
            "generator": "Ninja Multi-Config",
            "environment": {
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
            },
            "inherits": [
                "base_configuration"
            ]
        },
        {
            "displayName": "Visual Studio 2022",
            "name": "msvcc",
            "description": "Use Visual Studio to generate a multiconfiguration output.",
            "generator": "Visual Studio 17 2022",
            "environment": {
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "inherits": [
                "base_configuration"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "ninja-mc-release",
            "displayName": "Release",
            "configuration": "Release",
            "configurePreset": "ninja-mc"
        },
        {
            "name": "ninja-mc-debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "ninja-mc"
        },
        {
            "name": "msvcc-release",
            "displayName": "Release",
            "configuration": "Release",
            "configurePreset": "msvcc",
            "jobs": 20,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "msvcc-debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "msvcc",
            "jobs": 20,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "testPresets": [
        {
            "name": "ninja-mc-debug",
            "displayName": "Debug Tests",
            "configurePreset": "ninja-mc",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        },
        {
            "name": "ninja-mc-release",
            "displayName": "Release Tests", 
            "configurePreset": "ninja-mc",
            "configuration": "Release",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        },
        {
            "name": "msvcc-debug",
            "displayName": "Debug Tests (VS)",
            "configurePreset": "msvcc",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "msvcc-release",
            "displayName": "Release Tests (VS)",
            "configurePreset": "msvcc",
            "configuration": "Release",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ]
}
